#!/usr/bin/python

import os
import sys

remoteDir = "/mnt/wdtvlivehub/Music"
localDir  = os.path.join(os.path.expanduser("~"), "Music")

if not os.path.exists(remoteDir):
    os.mkdir(remote)
    
if not os.path.exists(localDir):
    os.mkdir(local)
  
os.chdir(localDir)
allFiles    = {}
remoteFiles = {}
localFiles  = {}
missingRoot = None;

for dirPath, subDirs, files in os.walk("."):
    relPath = dirPath[1:]
    
    if not os.path.isdir(remoteDir + relPath):
        if relPath.endswith("/.mediaartlocal"):
            continue
            
        if missingRoot == None or not relPath.startswith(missingRoot):
            print remoteDir + " does not contain directory " + relPath
            missingRoot = relPath
    else:
        missingRoot = None
        
    for file in files:
        if file.endswith(".jpg"):
            continue
            
        if file in allFiles:
            print "File " + file + " found in " + localDir + relPath + " and " + allFiles[file]
        else:
            allFiles[file] = localDir + relPath
        
        if not os.path.isfile(remoteDir + relPath + "/" + file):
            if not missingRoot:
                print remoteDir + relPath + " does not contain file " + file
                
sys.exit(0)
