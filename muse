#!/usr/bin/python

"""muse - Muse Audio File Manager

Usage: muse -c|--cmp [[<path1>] <path2>]
       muse -d|--dedup [-f|-n] [<path1>]
       muse -h|--help
       muse -r|--reconcile [<path1>]
       muse -t|--tags [<path1>]
       muse --version

Options:
    -c --cmp        Compare two files or libraries
    -d --dedup      Searches for and removes duplicate files in a libary (default: ~/Music)
    -f --force      Force deduplication even if files are different sizes
    -h --help       Shows this screen
    -n --noaction   For the dedup command; just tells you what it would do
    -r --reconcile  Reconcile directories, file names and tags of files or libraries
    -t --tags       List the tags of files or libraries
       --version    Shows the version
"""

import filecmp
import os
import sys

sys.path.append(os.path.join(os.path.dirname(os.path.abspath(sys.argv[0])), "lib"))
from docopt       import docopt
from muse.Factory import createAudioFile
from muse.Options import options

arguments = docopt(__doc__, version='1.0')
path1 = arguments['<path1>'] if arguments['<path1>'] else os.path.join(os.path.expanduser("~"), "Music")
options["warning"] = True
options["force"  ] = arguments['--force']

if arguments['--cmp']:
    path2 = arguments['<path2>'] if arguments['<path2>'] else "/mnt/wdtvlivehub/Music"
else:
    path2 = None

if os.path.isfile(path1):
    if arguments['--cmp']:
        file1 = createAudioFile(path1)
        file2 = createAudioFile(path2)
        file1.isPreferredTo(file2)
        
    elif arguments['--reconcile']:
        file1 = createAudioFile(path1)
        file1.readFile()
        file1.reconcile()
    
    elif arguments['--tags']:
        file1 = createAudioFile(path1)
        file1.readFile()
        
        for frameId in file1.frames.keys():
            print frameId + ":" + file1.frames[frameId]

    sys.exit(0)
    
if not os.path.exists(path1):
    os.mkdir(path1)
    
if arguments['--cmp'] and not os.path.exists(path2):
    os.mkdir(path2)
  
os.chdir(path1)
allFiles    = {}
filesBySize = {}
remoteFiles = {}
localFiles  = {}
missingRoot = None;

for dirPath, subDirs, files in os.walk("."):
    relPath = dirPath[1:]
    
    if path2 and not os.path.isdir(path2 + relPath):
        if relPath.endswith("/.mediaartlocal"):
            continue
            
        if missingRoot == None or not relPath.startswith(missingRoot):
            print path2 + " does not contain directory " + relPath
            missingRoot = relPath
    else:
        missingRoot = None
        
    for file in files:
        filePath  = dirPath + "/" + file
        audioFile = createAudioFile(filePath)
        
        if not audioFile:
            continue
            
        key = file.lower()

        if key in allFiles:
            otherFile = allFiles[key]
            score     = audioFile.isPreferredTo(otherFile)
            
            if arguments["--noaction"]:
                if score < 0:
                    print "%s is prefered to %s by %d points" % (file.filePath, otherFile.filePath, -score)
                elif score > 0:
                    print "%s is prefered to %s by %d points" % (otherFile.filePath, file.filePath, -score)
            
            elif score < 0:
                otherFile.remove()
            elif score > 0:
                file.remove()
            else:
                print "Can't choose between %s and %s (try -fn to see what force would do)" % (ile.filePath, otherFile.filePath)
                
        else:
            allFiles[key] = audioFile
        
        if path2 and not os.path.isfile(path2 + relPath + "/" + file):
            if not missingRoot:
                print path2 + relPath + " does not contain file " + file
                
sys.exit(0)
